<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alexb.favorablecourse">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".presentation.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FavorableCourse">
        <activity
            android:name=".presentation.view.SettingsActivity"
            android:label="@string/title_activity_setings"
            android:parentActivityName=".presentation.view.CurrencyActivity" />
        <activity
            android:name=".presentation.view.CurrencyActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.FavorableCourse.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>